<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#001C64"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Support Header -->
        <TextView
            android:text="Support"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Brand -->
        <TextView
            android:text="SpendWise"
            android:textSize="20sp"
            android:textColor="#80FFFFFF"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Contact Live Chat -->
        <TextView
            android:text="Contact Live Chat"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <!-- Email Input -->
        <EditText
            android:id="@+id/etSupportEmail"
            android:hint="Email"
            android:text="stiscmadlapha31@gmail.com"
            android:inputType="textEmailAddress"
            android:background="@android:drawable/edit_text"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Send Email Button -->
        <Button
            android:id="@+id/btnSendSupportEmail"
            android:text="Send Us An Email"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- FAQs -->
        <TextView
            android:text="FAQs"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
