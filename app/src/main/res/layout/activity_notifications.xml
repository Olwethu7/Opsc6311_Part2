<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#001C64"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Notifications"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="✅ Transaction Complete\nNhlanhla - R400\n14:50 PM"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="⚠️ High Spending Alert\nGroceries - R1850\n13:50 PM"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="🆕 New Category Added\nSpendWise | 6:30 AM"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
<!--
SwitchCompat widgets
-->
        <TextView
            android:text="📦 You updated your profile info\nLast Week - 08:00 AM"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchPopUps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Pop-Ups"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchLockScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show on Lock Screen"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show in Status Bar"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
